{
    "name": "azeroth-api",
    "version": "0.14.0",
    "description": "AzerothAPI",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AzerothJS/AzerothAPI.git"
    },
    "bugs": {
        "url": "https://github.com/AzerothJS/AzerothAPI/issues"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "6.10.4",
        "@nestjs/core": "6.10.4",
        "@nestjs/platform-express": "6.10.4",
        "@nestjs/typeorm": "6.2.0",
        "class-transformer": "0.2.3",
        "class-validator": "0.11.0",
        "compression": "1.7.4",
        "cookie-parser": "1.4.4",
        "dotenv": "8.2.0",
        "express-rate-limit": "5.0.0",
        "helmet": "3.21.2",
        "html-to-text": "5.1.1",
        "jsonwebtoken": "8.5.1",
        "mysql": "2.17.1",
        "nodemailer": "6.4.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.0",
        "rxjs": "6.5.3",
        "serialize-javascript": "^2.1.2",
        "typeorm": "0.2.20"
    },
    "devDependencies": {
        "@nestjs/cli": "6.12.6",
        "@nestjs/schematics": "6.7.5",
        "@nestjs/testing": "6.10.4",
        "@types/cookie-parser": "1.4.2",
        "@types/dotenv": "6.1.1",
        "@types/express": "4.17.2",
        "@types/html-to-text": "1.4.31",
        "@types/jest": "24.0.23",
        "@types/jsonwebtoken": "8.3.5",
        "@types/node": "12.12.14",
        "@types/nodemailer": "6.2.2",
        "@types/supertest": "2.0.8",
        "jest": "24.9.0",
        "prettier": "1.19.1",
        "supertest": "4.0.2",
        "ts-jest": "24.2.0",
        "ts-loader": "6.2.1",
        "ts-node": "8.5.4",
        "tsconfig-paths": "3.9.0",
        "tslint": "5.20.1",
        "typescript": "3.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
